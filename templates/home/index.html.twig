{% extends 'base.html.twig' %}

{% block title %}Accueil - Biblioth√®que{% endblock %}

{% block body %}
    <div class="container py-5">
        {# Section d'en-t√™te avec message de bienvenue #}
        <header class="text-center mb-5">
            <h1 class="display-4 mb-3">Bienvenue √† la Biblioth√®que</h1>
            {% if app.user %}
                <p class="lead">Bonjour {{ app.user.name }} !</p>
            {% else %}
                <p class="lead">Connectez-vous pour emprunter des livres</p>
            {% endif %}
        </header>

        {# Messages flash pour les notifications #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {# Section principale avec les cartes de navigation #}
        <div class="row g-4">
            {# Carte Catalogue des Livres #}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">üìö Catalogue des Livres</h5>
                        <p class="card-text">Parcourez notre collection de livres disponibles.</p>
                        <a href="{{ path('app_book_index') }}" class="btn btn-primary">Voir les livres</a>
                    </div>
                </div>
            </div>

            {# Carte Auteurs #}
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">‚úçÔ∏è Nos Auteurs</h5>
                        <p class="card-text">D√©couvrez les auteurs de notre biblioth√®que.</p>
                        <a href="{{ path('app_author_index') }}" class="btn btn-primary">Voir les auteurs</a>
                    </div>
                </div>
            </div>

            {# Carte Emprunts - visible uniquement pour les utilisateurs connect√©s #}
            {% if app.user %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">üìñ Mes Emprunts</h5>
                            <p class="card-text">G√©rez vos emprunts en cours.</p>
                            <a href="{{ path('app_borrow_list') }}" class="btn btn-primary">Voir mes emprunts</a>
                        </div>
                    </div>
                </div>
            {% endif %}

            {# Section Administration - visible uniquement pour les administrateurs #}
            {% if is_granted('ROLE_ADMIN') %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-danger">
                        <div class="card-body">
                            <h5 class="card-title">‚öôÔ∏è Administration</h5>
                            <p class="card-text">G√©rez les utilisateurs et les droits.</p>
                            <a href="{{ path('admin_users_index') }}" class="btn btn-danger">Panneau d'administration</a>
                        </div>
                    </div>
                </div>
            {% endif %}

            {# Carte Connexion/Inscription - visible uniquement pour les visiteurs #}
            {% if not app.user %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">üîë Espace Membre</h5>
                            <p class="card-text">Connectez-vous ou cr√©ez un compte.</p>
                            <div class="d-flex gap-2">
